<Window x:Class="PT200Emulator.UI.MainWindow"
        x:Name="MainWindowControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:PT200Emulator.UI"
        SizeToContent="WidthAndHeight"
        Title="PT200 Emulator"
        TextInput="Window_TextInput"
        Background="Black"
        PreviewKeyDown="Window_PreviewKeyDown"
        KeyDown="Window_KeyDown"
        Focusable="True"
        Loaded="Window_Loaded">

    <DockPanel LastChildFill="False">

        <!-- Sidopanel med färgval och loggnivå -->
        <Border Background="DarkGray" Padding="5" DockPanel.Dock="Left">
            <StackPanel Width="175" Background="DarkGray">
                <TextBlock Text="Skärmtyp:" FontWeight="Bold" Margin="0,5,0,10"/>
                <Button Content="Vit" Click="SetWhiteDisplay" Margin="0,5,0,5" Focusable="False"/>
                <Button Content="Blå" Click="SetBlueDisplay" Margin="0,5,0,5" Focusable="False"/>
                <Button Content="Grön" Click="SetGreenDisplay" Margin="0,5,0,5" Focusable="False"/>
                <Button Content="Amber" Click="SetAmberDisplay" Margin="0,5,0,5" Focusable="False"/>
                <Button Content="Färg" Click="SetFullColorDisplay" Margin="0,5,0,20" Focusable="False"/>
                <Button Content="Toggle Console" Click="ToggleConsole_Click" Margin="0,5,0,20" Focusable="False"/>
                <TextBox x:Name="HostTextBox" Width="150" Margin="0,0,5,0" Text="localhost" ToolTip="IP-adress eller värdnamn" Focusable="False"/>
                <TextBox x:Name="PortTextBox" Width="60" Margin="0,0,5,0" Text="2323" ToolTip="Portnummer" Focusable="False"/>
                <Button x:Name="ConnectButton" Content="Connect" Click="ConnectButton_Click" Width="80" Focusable="False"/>
                <Button x:Name="DisconnectButton" Content="Disconnect" Click="DisconnectButton_Click" Width="80" Margin="0,5,0,20" Focusable="False"/>

                <ComboBox x:Name="LogLevelCombo" SelectedValuePath="Content"
                          Width="150" Margin="5">
                    <ComboBoxItem Content="Trace" />
                    <ComboBoxItem Content="Debug"/>
                    <ComboBoxItem Content="Information" IsSelected="True"/>
                    <ComboBoxItem Content="Warning"/>
                    <ComboBoxItem Content="Error"/>
                    <ComboBoxItem Content="Critical"/>
                    <ComboBoxItem Content="None"/>
                </ComboBox>
                <!-- Visuell indikator -->
    <TextBlock x:Name="LogLevelIndicator"
               FontWeight="Bold"
               Foreground="Green"
               Margin="0,5,0,0"
               Text="Aktuell loggnivå: Trace" />
    <TextBlock Text="{Binding CurrentLevel}" />
    <TextBlock Text="{Binding LogCount}" />
            </StackPanel>
        </Border>

        <!-- Huvudyta med terminal och statusrad -->
        <Grid HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Terminalkontrollen -->
            <ui:TerminalControl x:Name="Terminal" Grid.Row="0" VerticalAlignment="Stretch" />
        </Grid>
    </DockPanel>
</Window>