<UserControl
    x:Class="PT200Emulator.UI.TerminalControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="UserControl_Loaded"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    VerticalAlignment="Stretch"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextHintingMode="Fixed"
    TextOptions.TextRenderingMode="Aliased">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <!-- Terminalyta -->
            <RowDefinition Height="*"/>
            <!-- Statusrad -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Terminalyta injiceras i kod -->
        <Grid x:Name="TerminalHost"
              Grid.Row="0"
              ClipToBounds="True"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"/>

        <!-- Statusrad -->
        <StatusBar x:Name="StatusBarElement"
                   Grid.Row="1"
                   Background="LimeGreen"
                   Foreground="Black">
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock x:Name="StatusText"
                           VerticalAlignment="Center"
                           Text="⏳ Terminalen laddar..." />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="Insert" Foreground="Red" Background="LimeGreen" Text="| OVR" />
                    <TextBlock x:Name="ScrollLock" Foreground="Red" Background="LimeGreen" Text="| SCROLL " />
                    <TextBlock x:Name="CapsLock" Foreground="Purple" Background="LimeGreen" Text="| CAPS " />
                    <TextBlock x:Name="NumLock" Foreground="Black" Background="LimeGreen" Text="| NUM " />
                    <TextBlock x:Name="SpeedTextBlock" Text="| ↩ 0 B/s" />
                    <TextBlock x:Name="ClockTextBlock"
                               Margin="5,0"
                               Text="{Binding CurrentTime, FallbackValue='--:--'}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>